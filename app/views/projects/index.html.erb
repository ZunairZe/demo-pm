<div class='card'>
  <div class="card-header accordion">
    <h6 data-bs-toggle="collapse" href="#overview" role="button"><b class='text-success'>Overall View of the Projects</b></h6>
  </div>
  <div class="accordion-collapse collapse show" id="overview">
    <div class="row">
        <div class="col-6">
          <%= pie_chart @projects.group(:starting_date).count %>
        </div>
        <div class="col-6">
          <%= line_chart @projects.group(:status).count, xtitle: "Status", ytitle: "Count" %>
        </div>
      </div>
  </div>
</div>

<div class='card-body'>
  <div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h3 class="text-secondary">Projects Created By You</h3>
    <div class="d-flex justify-content-between">
      <%= render "shared/search", url: employees_path %>
      <%= link_to "New Project", new_project_path, class: "btn btn-warning mx-2" %>
      <%= link_to 'View all Projects', all_projects_path, class: 'btn btn-info' %>
    </div>
  </div>
    <%= render 'projects' %>
</div>
