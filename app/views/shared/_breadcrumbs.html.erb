<nav aria-label="breadcrumb" class='mt-3'>
  <ol class="breadcrumb bg-white p-2">
    <li class="breadcrumb-item">
      <% if current_user.admin? %>
        <%= link_to 'Home', root_path, class:"text-success"%>
      <% else %>
        <%= link_to 'Home', employees_path, class:"text-success"%>
      <% end %>
    </li>
    <% @breadcrumbs.each do |breadcrumb| %>
      <% if breadcrumb[:path].nil? %>
        <li class="breadcrumb-item active">
          <%= breadcrumb[:label] %>
        </li>
      <% else %>
        <li class="breadcrumb-item">
        <%= link_to breadcrumb[:label], breadcrumb[:path], class:"text-info" %>
        </li>
      <% end %>
    <% end %>
  </ol>
</nav>