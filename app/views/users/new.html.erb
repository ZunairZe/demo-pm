<div class="col-md-4">
<h2>Adding a new user</h2>

<%= form_for User.new , :url => {:action => "add_user"} do |user| %>
  <div class="form-group">
    <%= user.label :email %><br />
    <%= user.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= user.label :password %><br />
    <%= user.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= user.label :password_confirmation %><br />
    <%= user.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <% if current_user.id == 1 %>
    <div class="form-group">
      <%= user.label :Role %><br />
      <%= user.select :admin, User::ROLE_OPTIONS, {}, class: 'form-control mb-2' %>
    </div>
  <% end %>

  <div class="add">
    <%= user.submit class:'btn btn-primary'%>
  </div>
<%end%>
</div>