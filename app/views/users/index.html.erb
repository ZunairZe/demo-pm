<div class='card-body'>
  <h4>All Employees</h4> <br>
  <% if @user.count == 0 %>
    <div class="card">
      <center><i>No employees available yet!</i></center>
    </div>
  <% else %>
    <table style="width:100%;" class="table bg-white">
      <thead class="table-dark">
        <th>Name</th>
        <th>Email</th>
        <th>Designation</th>
        <th colspan="4"><center>Actions</center></th>
      </thead>

      <% @user.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.designation %></td>
          <td><%= link_to 'View Tasks', tasks_user_path(user), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Show', user_path(user), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Delete', user, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>